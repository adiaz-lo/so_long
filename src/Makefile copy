NAME = so_long

DEPS = lib/Libft/libft.a lib/MLX42/build/libmlx42.a

CC = gcc

SRCS_DIR = src/

GNL_SRC_DIR = lib/GNL/

CFLAGS = -Wall -Werror -Wextra -Iincludes -Ilib/Libft/includes -Llib/libft/includes -llibft

DEB_FLAGS = -g3

LIB_FLAGS = -ldl -lglfw -pthread -lm

ARFLAGS = -rcs

RM = rm -f

GNL_SRCS = get_next_line.c

SRCS = so_long.c	init.c	read_file.c	throw_error.c close_file.c free_map.c clean.c open_file.c

GNL_DIR_PREFIX = $(addprefix $(GNL_SRC_DIR), $(GNL_SRCS))

DIR_PREFIX = $(addprefix $(SRCS_DIR), $(SRCS))

GNL_OBJS = $(GNL_DIR_PREFIX:.c=.o)

OBJS = $(DIR_PREFIX:.c=.o)

all:	$(NAME)

%.o : %.c
	$(CC) $(CFLAGS) -c -o $@ $<

gnl :	$(OBJS) $(GNL_OBJS) $(INCLUDE)
	    $(GNL_OBJS)

$(DEPS): gnl
	make -C lib/Libft


$(NAME): $(DEPS) $(INCLUDE) $(OBJS)
	$(CC) $(DEPS) $(OBJS) $(CFLAGS) $(DEB_FLAGS) $(LIB_FLAGS) -o $(NAME)

clean :
	$(RM) $(OBJS)
	make -C lib/Libft fclean

gnl_clean : clean
	$(RM) $(GNL_OBJS)

fclean : clean
	$(RM) $(NAME)

re : fclean all
